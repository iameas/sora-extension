{
  "Print to Console": {
    "prefix": "show",
    "body": ["show(\"$1\")"],
    "description": "Log output to the console"
  },
  "Print to Screen": {
    "prefix": "print",
    "body": ["print(\"$1\")"],
    "description": "Print text to the UI screen"
  },
  "Alert (print -r)": {
    "prefix": "print -r",
    "body": ["print -r(\"$1\")"],
    "description": "Alert popup (JS-style alert)"
  },
  "Modal": {
    "prefix": "modal",
    "body": [
      "modal(",
      "  button[$1Cancel, Continue],",
      "  Text(\"$2Welcome\") desc(\"$3Do you want to continue?\")",
      ")"
    ],
    "description": "Pop-up modal with text and buttons"
  },
  "Input": {
    "prefix": "input",
    "body": ["input(\"Enter your $1: \")"],
    "description": "Prompt user for input"
  },
  "If Block": {
    "prefix": "if",
    "body": [
      "if ${1:condition}:",
      "    ${2:print(\"Yes\")}",
    ],
    "description": "Conditional block"
  },
  "If / Else Block": {
    "prefix": "ifelse",
    "body": [
      "if ${1:condition}:",
      "    ${2:print(\"Yes\")}",
      "else:",
      "    ${5:print(\"No\")}"
    ],
    "description": "Conditional block"
  },
  "Variable Assignment": {
    "prefix": "let",
    "body": ["let ${1:variable} be ${2:value}"],
    "description": "Define a variable"
  },
  "Update Value": {
    "prefix": "make",
    "body": ["make ${1:variable} be ${2:new_value}"],
    "description": "Update an existing variable"
  },
  "Container with Components": {
    "prefix": "Container",
    "body": [
      "Container as ${1:wrapper}:",
      "    Text: \"$2\" as ${3:heading}",
      "    Button as ${4:btn_primary}:",
      "        Text: \"$5\""
    ],
    "description": "Create a container with child components"
  },
  "Style Block": {
    "prefix": "style",
    "body": [
      "style {",
      "    ${1:class_name} {",
      "        ${2:property}: ${3:value};",
      "    }",
      "}"
    ],
    "description": "Add style block"
  }
}