{
    "scopeName": "source.sora",
    "patterns": [
        {
            "name": "keyword.control.sora",
            "match": "\\b(let|const|var|export|import|error|stay|then|function|if|else|elseif|what|for|---break|while|show|make|is|not|can|be|math)\\b"
        },
        {
            "name": "string.quoted.double.sora",
            "begin": "\"",
            "end": "\""
        },
        {
            "name": "string.quoted.single.sora",
            "begin": "'",
            "end": "'"
        },
        {
            "name": "comment.line.sora",
            "match": "#.*"
        },
        {
            "name": "constant.numeric.sora",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        }
    ]
}